@model IEnumerable<WebUI.Models.TrainingPlan.TrainingPlanViewModel>

@{
    ViewBag.Title = "Training Plans";
}

<div class="container">
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th class="col-2 fs-5">
                Author
            </th>
            <th class="col-3 fs-5">
                Title
            </th>
            <th class="col-1 fs-5">
                Actions
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var plan in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Users" asp-action="Get" asp-route-userName="@plan.Author.UserName">@plan.Author.UserName</a>
                </td>
                <td>
                    <a asp-controller="TrainingPlans" asp-action="GetTrainingPlan" asp-route-author="@plan.Author.UserName" asp-route-title="@plan.Title">@plan.Title</a>
                </td>
                <td>
                    
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>