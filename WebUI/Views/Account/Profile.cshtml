@model FullProfileViewModel

@{
    ViewBag.Title = "Profile";
}

<div class="container mt-3">
    <h1>Profile</h1>
    
    <p class="fs-3">Username: @Model.Username</p>
    <p class="fs-3">About: @Model.About</p>
    
    <p class="fs-3">Email: @Model.Email</p>
    <p class="fs-3">Phone: @Model.Phone</p>
    
    <p class="fs-3">Roles: @if (Model.Roles is not null)
                           {
                               foreach (var role in Model.Roles)
                               {
                                   @role<text>; </text>
                               }
                           }</p>
</div>
