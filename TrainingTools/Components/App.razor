@using Contracts.Services

@inject IHttpContextAccessor HttpContextAccessor
@inject ICookiesSession CookiesSession
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <base href="/"/>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="app.css"/>
    <link rel="stylesheet" href="TrainingTools.styles.css"/>
    <link rel="icon" type="image/png" href="favicon.png"/>
    <HeadOutlet/>
</head>

<body>
<Routes/>
<script>
    function setCookie(cookieString) {
        document.cookie = cookieString;
    }
    
    function getCookies(){
        return document.cookie.split(';');
    }
</script>
<script src="_framework/blazor.web.js"></script>
</body>

</html>

@code
{
    public bool IsAuthorized { get; private set; } = false;
    protected override void OnInitialized()
    {
        if (HttpContextAccessor.HttpContext == null) return;
        IsAuthorized = CookiesSession.GetAuthentication(HttpContextAccessor.HttpContext, out _);
        // can create scoped server but it works only for static rendered components
    }
}
