@model EditUserModel
@{
    ViewBag.Title = "Edit user";
    ViewBag.CurrentPage = ActivePage.Profile;
}
<div class="container">
    <form method="post" asp-controller="Users" asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="form-group mb-3">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" type="text" class="form-control" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" type="email" class="form-control" required>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group mt-5 mb-3">
            <hr/>
            <p class="text-primary">Write password for save changes</p>
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" type="password" class="form-control" required>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Edit</button>
        </div>
    </form>
</div>