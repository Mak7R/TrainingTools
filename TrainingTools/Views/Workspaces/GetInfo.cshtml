@model TrainingTools.ViewModels.WorkspaceViewModel

@{
    ViewBag.Title = $"Workspace: {Model.Name}";
    ViewBag.CurrentPage = ActivePage.Workspaces;
}

<div class="container-fluid">
    <div class="container mb-2">
        <h1>Workspace: @Model.Name</h1>

        <ul class="list-group list-group-flush">
            <li class="list-group-item">ID: @Model.Id</li>
            <li class="list-group-item">Name: @Model.Name</li>
            <li class="list-group-item">Owner: @Model.Owner.Name</li>
        </ul>
    </div>
    <div class="container">
        <h3>Actions</h3>
        <a asp-controller="Groups" asp-action="Index" asp-route-workspaceId="@Model.Id" class="btn btn-success">Groups</a>
        <a asp-controller="Exercises" asp-action="Index" asp-route-workspaceId="@Model.Id" class="btn btn-success">Exercises</a>
        <a class="btn btn-primary" asp-controller="Workspaces" asp-action="Edit">Edit</a>
        @await Html.PartialAsync("Partials/DeleteWithPasswordPartialView", new DeleteWithPasswordViewModel
        (
            "Delete",
            $"Delete workspace: {Model.Name}",
        $"/workspaces/{Model.Id}/delete",
        "alert('Workspace was successful deleted');window.location.href = '/workspaces';"
            ), ViewData)
    </div>
</div>