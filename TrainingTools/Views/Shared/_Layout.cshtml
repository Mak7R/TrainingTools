
@functions {
    string IsActive(ActivePage page)
    {
        return page == ViewBag.CurrentPage ? "active" : string.Empty;
    }
}

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <title>@ViewBag.Title</title>

    <!-- Bootstrap Head -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
  </head>
  <body>
  <main style="min-height: 100vh; width: 100%">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark p-2">
              <a class="navbar-brand" href="">Training Tools</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="true" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNav">
                  <ul class="navbar-nav">
                      <li class="nav-item">
                          <a class="nav-link @IsActive(ActivePage.Home)" asp-controller="Home" asp-action="Index">Home</a>
                      </li>
                      <li class="nav-item">
                          <a class="nav-link @IsActive(ActivePage.Workspaces)" asp-controller="Workspaces" asp-action="Index">Workspaces</a>
                      </li>
                      <li class="nav-item">
                          <a class="nav-link @IsActive(ActivePage.Login)" asp-controller="Users" asp-action="Login">Login</a>
                      </li>
                      <li class="nav-item">
                          <a class="nav-link @IsActive(ActivePage.Register)" asp-controller="Users" asp-action="Register">Register</a>
                      </li>
                  </ul>
              </div>
        </nav>
        <div class="container-fluid p-2">
            @RenderBody()
        </div>
  </main>
  <script
            src="https://cdn.jsdelivr.net/npm/@@popperjs/core@@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"
            defer></script>

  <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
      defer></script>
  <script src="js/main.js"></script>
  <script src="js/main.lib.js"></script>
    @await RenderSectionAsync("scripts", false)
  </body>
</html>